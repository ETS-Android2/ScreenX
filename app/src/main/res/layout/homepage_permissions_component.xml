<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10pt"
    android:layout_marginRight="10pt"
    android:layout_centerHorizontal="true">
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shadowElevation="3dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shapeType="flat"
        app:neumorph_backgroundColor="@color/lightWhite"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/left_border"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/text_view"
                android:layout_alignBottom="@id/text_view"
                android:background="@color/permission_granted_shadow_dark"></View>
            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="0dp"
                android:paddingVertical="25dp"
                android:textSize="18dp"
                android:text="@string/storage_permission_text">
            </TextView>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/success_animation"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_rawRes="@raw/success_green"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_alignParentEnd="true"
                app:lottie_scale="16"
                app:lottie_speed="0.5"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>
